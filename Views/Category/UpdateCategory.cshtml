@model DevFolio.Models.TblCategory
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Güncelleme</h2>
<form method="post">
    <label>Kategori Id</label>
    <input type="text" class="form-control" name="CategoryId" value="@Model.CategoryId"/>
    <br />
    <label>Kategori Adı</label>
    <input type="text" class="form-control" name="CategorName" value="@Model.CategoryName"  />
    <br />
    <button class="form-control" class="btn btn-info">Kategori Güncelle</button>

</form>

